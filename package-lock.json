@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply font-sans text-gray-800 bg-white; /* Set default text to dark gray, background to white */
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-bold;
  }
}

@layer components {
  .container {
    @apply mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl; /* Standardize container */
  }

  /* Primary button style */
  .btn-primary {
    @apply inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-gradient-to-r from-primary-blue to-primary-purple hover:from-primary-purple hover:to-primary-blue transition-all duration-300 ease-in-out;
  }

  /* Secondary button style */
  .btn-secondary {
    @apply inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-300 ease-in-out;
  }

  /* Text gradient for headings and special numbers */
  .gradient-text {
    @apply bg-gradient-to-r from-primary-blue to-primary-purple bg-clip-text text-transparent;
  }
}